<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar_collapsing_add_prop"
    style="@style/ThemeOverlay.AppCompat"
    android:elevation="0dp"
    android:stateListAnimator="@null"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:id="@+id/toolbar_collapsing_expanded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        app:expandedTitleMarginBottom="40dp"
        app:contentScrim="@android:color/transparent"
        app:collapsedTitleGravity="center_horizontal|center_vertical"
        app:collapsedTitleTextAppearance="@style/CollapsedAppBar"
        app:layout_scrollFlags="scroll|snap|exitUntilCollapsed|enterAlways|enterAlwaysCollapsed"
        app:title="">

        <androidx.cardview.widget.CardView
            android:id="@+id/toolbar_collapsed_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_40sdp"
            android:layout_marginTop="-50dp"
            android:layout_marginRight="-40dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <Button
                    android:id="@+id/button_home"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:background="@drawable/ic_baseline_arrow_back_ios_24"
                    android:layout_marginTop="@dimen/_50sdp"
                    android:layout_marginLeft="@dimen/_10sdp"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:background="@color/color_home1"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/text_view_collapsed_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:alpha="0"
                    android:fontFamily="@font/roboto_medium"
                    android:paddingRight="@dimen/_30sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:text="Property detail"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_16sdp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_view_detail"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/image_view_icon"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/_60sdp"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="45dp"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="@dimen/_25sdp"
                    android:text="Detail about \nyour property"
                    app:layout_collapseMode="parallax"
                    android:textColor="#FFFFFF" />

                <ImageView
                    android:id="@+id/image_view_icon_location"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_marginRight="@dimen/_30sdp"
                    android:layout_marginBottom="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:elevation="0dp"
                    android:background="@drawable/toolbar_add_property_icon" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <com.example.project2.ui.views.CustomToolbar
            android:id="@+id/toolbar_collapsed"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            app:layout_collapseMode="pin"
            android:elevation="0dp"
            android:paddingEnd="24dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat"
            app:titleTextColor="@android:color/white"/>

    </com.google.android.material.appbar.CollapsingToolbarLayout>
</com.google.android.material.appbar.AppBarLayout>