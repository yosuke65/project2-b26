<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar_collapsing_home"
    style="@style/ThemeOverlay.AppCompat"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white2"
    android:stateListAnimator="@null">

    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:id="@+id/toolbar_collapsing_expanded_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:collapsedTitleGravity="center_horizontal|center_vertical"
        app:collapsedTitleTextAppearance="@style/CollapsedAppBar"
        app:contentScrim="@android:color/transparent"
        app:expandedTitleMarginBottom="40dp"
        app:layout_scrollFlags="scroll|snap|exitUntilCollapsed|enterAlways|enterAlwaysCollapsed"
        app:title="">

        <androidx.cardview.widget.CardView
            android:id="@+id/toolbar_collapsed_cardview_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-50dp"
            app:cardElevation="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_40sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="330dp">

                <Button
                    android:id="@+id/button_home"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_50sdp"
                    android:visibility="visible"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/ic_baseline_settings_24" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="330dp"
                    android:background="#213150"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_4sdp"
                    android:background="@drawable/round_bar_home"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/_5sdp"/>

                <TextView
                    android:id="@+id/text_view_collapsed_title_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:alpha="0"
                    android:fontFamily="@font/roboto_medium"
                    android:paddingRight="@dimen/_30sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:text="Property detail"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_16sdp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignLeft="@+id/image_view_icon"
                    android:layout_alignBottom="@+id/image_view_icon_user"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="-50dp">
<!--                    <com.google.android.material.textview.MaterialTextView-->
<!--                        android:id="@+id/text_view_hello"-->
<!--                        style="@style/TextAppearance.AppCompat.Medium"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:fontFamily="@font/roboto_medium"-->
<!--                        android:text="Hello, "-->
<!--                        android:textColor="#FF7A52"-->
<!--                        android:textSize="@dimen/_19sdp"-->
<!--                        app:layout_collapseMode="parallax" />-->

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/text_view_user_name"
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Tom"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/_19sdp"
                        app:layout_collapseMode="parallax" />
                </LinearLayout>


                <ImageView
                    android:id="@+id/image_view_icon_user"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/toolbar_home_user_icon"
                    android:elevation="0dp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <com.example.project2.ui.views.CustomToolbar
            android:id="@+id/toolbar_collapsed_home"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:elevation="0dp"
            android:paddingEnd="24dp"
            app:layout_collapseMode="pin"
            app:popupTheme="@style/ThemeOverlay.AppCompat"
            app:titleTextColor="@android:color/white" />

    </com.google.android.material.appbar.CollapsingToolbarLayout>
</com.google.android.material.appbar.AppBarLayout>