<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.example.project2.ui.main.property.addproperty.AddPropertyViewModel" />

        <variable
            name="activity"
            type="com.example.project2.ui.main.property.addproperty.AddPropertyActivity" />

        <variable
            name="userId"
            type="String" />

        <variable
            name="userType"
            type="String" />

        <variable
            name="country"
            type="com.google.android.material.textfield.TextInputEditText" />

        <variable
            name="address1"
            type="com.google.android.material.textfield.TextInputEditText" />

        <variable
            name="city"
            type="com.google.android.material.textfield.TextInputEditText" />

        <variable
            name="state"
            type="com.google.android.material.textfield.TextInputEditText" />

        <variable
            name="zip"
            type="com.google.android.material.textfield.TextInputEditText" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/layout_add_property"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.property.addproperty.AddPropertyActivity">


        <include layout="@layout/toolbar_collapsing_add_property" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:overScrollMode="never"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_text_country"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_40sdp"
                        android:hint="Country*"
                        android:text="@={viewModel.country}"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_text_address1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_top_edit_text_add_property"
                        android:hint="Address Line 1*"
                        android:text="@={viewModel.address1}"
                        app:layout_constraintTop_toBottomOf="@+id/edit_text_country" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_text_address2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_top_edit_text_add_property"
                        android:hint="Address Line 2"
                        android:text="@={viewModel.address2}"
                        app:layout_constraintTop_toBottomOf="@+id/edit_text_address1" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_text_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_top_edit_text_add_property"
                        android:hint="City*"
                        android:text="@={viewModel.city}"
                        app:layout_constraintTop_toBottomOf="@+id/edit_text_address2" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_text_state"
                        android:layout_width="@dimen/_130sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_top_edit_text_add_property"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:hint="State*"
                        android:text="@={viewModel.state}"
                        app:layout_constraintEnd_toStartOf="@+id/edit_text_zip_code"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/edit_text_city" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_text_zip_code"
                        android:layout_width="@dimen/_130sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_top_edit_text_add_property"
                        android:hint="Zip Code*"
                        android:text="@={viewModel.zip}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/edit_text_state"
                        app:layout_constraintTop_toBottomOf="@+id/edit_text_city" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/checkbox_owned"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_top_edit_text_add_property"
                        android:buttonTint="@color/color_home1"
                        android:checked="@={viewModel.owned}"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Owned"
                        android:textColor="@color/grey1"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/edit_text_state" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/checkbox_mortgage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_top_edit_text_add_property"
                        android:buttonTint="@color/color_home1"
                        android:checked="@={viewModel.mortgage}"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Mortgage"
                        android:textColor="@color/grey1"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/checkbox_owned" />

                    <Button
                        android:id="@+id/button_upload_image"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:layout_marginTop="@dimen/margin_top_edit_text_add_property"
                        android:background="@drawable/ic_baseline_add_to_photos_24"
                        android:drawablePadding="@dimen/_10sdp"
                        android:onClick="@{() -> activity.uploadImage()}"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/checkbox_mortgage" />

                    <TextView
                        android:id="@+id/text_view_file_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Add image"
                        android:textSize="@dimen/_13sdp"
                        app:layout_constraintBaseline_toBaselineOf="@+id/button_upload_image"
                        app:layout_constraintLeft_toRightOf="@+id/button_upload_image" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <Button
                    android:id="@+id/button_create_new_property"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@color/color_home1"
                    android:layout_marginTop="@dimen/_90sdp"
                    android:onClick="@{()->viewModel.addNewAddress(country,address1,city,state,zip,userType,userId)}"
                    android:text="Add new property"
                    app:layout_behavior="@string/hide_bottom_view_on_scroll_behavior"
                    android:textColor="@android:color/white" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <include layout="@layout/fragment_image_selection"/>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
