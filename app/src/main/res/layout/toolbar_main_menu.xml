<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:alpha="0"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar_main_menu">

    <TextView
        android:id="@+id/text_view_toolbar_menu_title"
        android:layout_width="wrap_content"
        android:layout_height="?actionBarSize"
        android:fontFamily="@font/roboto_light"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:text="Menu"
        android:textColor="#C6FFFFFF"
        android:textSize="20dp" />

    <Button
        android:id="@+id/button_main_user"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="left"
        android:background="@drawable/ic_baseline_person_243"
        />

    <Button
        android:id="@+id/button_main_setting"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="right"
        android:layout_marginEnd="15dp"
        android:background="@drawable/ic_baseline_settings_24"/>

</androidx.appcompat.widget.Toolbar>
