<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.example.project2.ui.auth.register.RegisterViewModel" />

        <variable
            name="activity"
            type="com.example.project2.ui.auth.register.RegisterActivity" />

        <variable
            name="nameField"
            type="com.google.android.material.textfield.TextInputLayout" />

        <variable
            name="emailField"
            type="com.google.android.material.textfield.TextInputLayout" />

        <variable
            name="passwordField"
            type="com.google.android.material.textfield.TextInputLayout" />

        <variable
            name="landlordEmailField"
            type="com.google.android.material.textfield.TextInputLayout" />

        <variable
            name="typeField"
            type="android.widget.RadioGroup" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:background="@drawable/bg_login_register"
        tools:context=".ui.auth.register.RegisterActivity">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_30sdp"
            android:text="Hello."
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias=".2"/>

        <TextView
            android:id="@+id/text_view_login"
            style="@style/Widget.MaterialComponents.TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{()->activity.startLoginActivity()}"
            android:text="Login"
            android:textColor="@android:color/white"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/coordinator_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toTopOf="@+id/edit_text_name">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioGroup
                    android:id="@+id/radio_group_user_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checkedButton="@={viewModel.type}"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toTopOf="@+id/edit_text_landlord_email"
                    app:layout_constraintStart_toStartOf="parent">

                    <TextView
                        android:id="@+id/text_view_type"
                        style="@style/Widget.MaterialComponents.TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:text="I'm a" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radio_landlord"
                        style="@style/Widget.AppCompat.CompoundButton.CheckBox"
                        android:buttonTint="@android:color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="@{()->activity.fadeOutEditTextAndSlideDownRadioButton()}"
                        android:text="Landlord"
                        android:textColor="@android:color/white"/>

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radio_tenant"
                        style="@style/Widget.AppCompat.CompoundButton.CheckBox"
                        android:buttonTint="@android:color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:onClick="@{()->activity.fadeInEditTextAndSlideUpRadioButton()}"
                        android:text="Tenant" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="end"
                        android:backgroundTint="@android:color/transparent"
                        android:enabled="false"/>

                </RadioGroup>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/edit_text_landlord_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="@dimen/login_register_layout"
                    android:visibility="gone"
                    app:layout_behavior="com.google.android.material.transformation.ExpandableBehavior"
                    app:layout_constraintTop_toBottomOf="@+id/radio_group_user_type">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_baseline_email_24"
                        android:drawablePadding="10dp"
                        android:textColor="@android:color/white"
                        android:backgroundTint="@android:color/white"
                        android:hint="Landlord's Email"
                        android:text="@={viewModel.landlordEmail}"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edit_text_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/login_register_layout"
            app:hintTextColor="@android:color/white"
            app:layout_constraintBottom_toTopOf="@id/edit_text_email">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/white"
                android:drawableStart="@drawable/ic_baseline_person_242"
                android:drawablePadding="10dp"
                android:hint="Username"
                android:text="@={viewModel.name}"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/white" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edit_text_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/login_register_layout"
            app:layout_constraintBottom_toTopOf="@id/edit_text_password">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_baseline_email_24"
                android:drawablePadding="10dp"
                android:textColor="@android:color/white"
                android:backgroundTint="@android:color/white"
                android:hint="Email"
                android:text="@={viewModel.email}"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edit_text_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toTopOf="@id/button_register"
            app:passwordToggleTint="@android:color/white"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_baseline_lock_24"
                android:drawablePadding="10dp"
                app:textInputLayoutFocusedRectEnabled="true"
                android:textColor="@android:color/white"
                android:backgroundTint="@android:color/white"
                android:hint="Password"
                android:inputType="textPassword"
                android:text="@={viewModel.password}"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/button_register"
            style="@style/TextAppearance.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:background="@drawable/bg_round_corner_solid1"
            android:onClick="@{()->viewModel.register(nameField,emailField,passwordField,landlordEmailField,typeField)}"
            android:text="@string/signup"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
