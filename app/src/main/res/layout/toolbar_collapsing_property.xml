<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar_collapsing_property"
    style="@style/ThemeOverlay.AppCompat"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white2"
    android:stateListAnimator="@null">

    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:id="@+id/toolbar_collapsing_expanded_property"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:collapsedTitleGravity="center_horizontal|center_vertical"
        app:contentScrim="@android:color/transparent"
        app:expandedTitleMarginBottom="40dp"
        app:expandedTitleMarginStart="@dimen/_40sdp"
        app:layout_scrollFlags="scroll|snap|exitUntilCollapsed|enterAlways|enterAlwaysCollapsed"
        app:title="Property">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <Button
                    android:id="@+id/button_more"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:visibility="visible"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/ic_baseline_more_vert_242" />

                <Button
                    android:id="@+id/button_home_property"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:background="@drawable/ic_baseline_arrow_back_ios_242"
                    android:elevation="10dp" />
            </RelativeLayout>


        <com.example.project2.ui.views.CustomToolbar
            android:id="@+id/toolbar_collapsed_property"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:elevation="0dp"
            android:paddingEnd="24dp"
            app:layout_collapseMode="pin"
            app:popupTheme="@style/ThemeOverlay.AppCompat"
            app:titleTextColor="#303030" />

    </com.google.android.material.appbar.CollapsingToolbarLayout>
</com.google.android.material.appbar.AppBarLayout>